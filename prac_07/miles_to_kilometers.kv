BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles_input
            font_size: 48
            on_text: app.handle_conversion(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'up'
                on_press: app. handle_increment(miles_input.text, 1)
            Button
                text: 'down'
                on_press: app. handle_increment(miles_input.text, -1)
    Button:
        text: 'Convert from miles to kilometres'
        on_press: app.handle_conversion()
    Label:
        id: output_label
        text: app.output_kilometres
        font_size: 48
        color: (1, 1, 0, 1)